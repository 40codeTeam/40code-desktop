{
  "name": "40code",
  "version": "3.2.3",
  "description": "40code编辑器",
  "main": "main.js",
  "scripts": {
    "start": "electron . --openssl-legacy-provider",
    "build2": "electron-packager . 40code --platform=win32 --arch=x64 --out=./out --icon=./logo.ico --overwrite",
    "build": "electron-builder --win --x64 ",
    "buildmac": "electron-builder --mac --x64"
  },
  "repository": "https://github.com/40codeTeam/40code-desktop",
  "keywords": [
    "40code"
  ],
  "file-associations": [
    {
      "ext": "sb3",
      "name": "40code作品",
      "role": "Editor"
    }
  ],
  "build": {
    "appId": "40code",
    "publish": ["github"],
    "directories": {
      "output": "build"
    },
    "productName": "40code离线编辑器",

    "mac": {
      "icon": "./logo.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "backgroundColor":"#4b9aed",
      "icon": "./logo.icns",
      "window": {
        "x": "200",
        "y": "150",
        "width": 500,
        "height": 400
      }
    },

    "win": {
      "icon": "./logo.ico",
      "target": [
        "nsis",
        "zip",
        "appx"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./logo.ico",
      "installerHeaderIcon": "./logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "appx":{
      "applicationId": "scratch.letUs40code"
    },

    "linux":{
      "target": [
        "zip","tar.gz",
        "AppImage"
      ]
    }
  },
  "author": "40code",
  "license": "AGPLv3",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {

  }
}
