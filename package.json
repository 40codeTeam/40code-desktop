{
  "name": "40code",
  "version": "3.2.0",
  "description": "40code编辑器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build2": "electron-packager . 40code --platform=win32 --arch=x64 --out=./out --icon=./logo.ico --overwrite",
    "build": "electron-builder --win --x64",
    "buildmac": "electron-builder --mac --x64"
  },
  "repository": "https://github.com/52black/40code-desktop",
  "keywords": [
    "40code"
  ],
  "file-associations": [
    {
      "ext": "sb3",
      "name": "40code作品",
      "role": "Editor"
    }
  ],
  "build": {
    "appId": "40code",
    "directories": {
      "output": "build"
    },
    "productName": "40code离线编辑器",
    "dmg": {
      "icon": "./logo.icns",
      "window": {
        "x": "200",
        "y": "150",
        "width": 500,
        "height": 400
      }
    },
    "mac": {
      "icon": "./logo.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./logo.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./logo.ico",
      "installerHeaderIcon": "./logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": "40code",
  "license": "AGPLv3",
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1"
  },
  "dependencies": {

  }
}
